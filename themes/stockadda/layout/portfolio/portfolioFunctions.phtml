    function calculateTotalValsMF_display(data_of_all_mutual_funds){

        var oldVal                  = 0;
        var currentVal              = 0;
        var currentVal_fyr          = 0;
        var invested_fyr            = 0;
        var financial_yr_timestamp  = new Date(new Date().getFullYear(), 3).getTime()/1000;

