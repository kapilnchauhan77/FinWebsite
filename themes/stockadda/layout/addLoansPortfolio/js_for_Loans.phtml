<script type="text/javascript">

    Date.prototype.toDateInputValue = (function() {
        var local = new Date(this);
        local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
        return local.toJSON().slice(0, 10);
    });

    var loans_to_not_add = new Array();
    var loans_num = 1;

    function AddLoansToTable(){

        table_body_data_to_add = `<tr id=`+ loans_num +` style="height:39px">
                                      <td><select name='loans_type' id='loans_type' style="width: 6em; height: 2.75em;"><option value="Gold">Gold</option><option value="Silver">Silver</option></select></td>
                                      <td><input id="loans_transaction_date" type="date" name="transaction_date"/></td>
                                      <td>
                                          <span class="stock_quote_transac_price_div">
                                              <input id="loans_transaction_price" type="number" min="0" value="0.00" step="any" class="stock_quote_transac_price" name="transaction_price" style="height:39px;" onkeyup=changeLoansValues(`+ loans_num +` ) onchange=changeLoansValues(`+ loans_num +` ) />
                                          </span>
                                      </td>
                                      <td><input id="loans_qty" type="number" min="0" value="0.00" step="any" class="stock_quote_transac_price" name="transaction_qty" style="height:39px;" onkeyup=changeLoansValues(`+ loans_num +` ) onchange=changeLoansValues(`+ loans_num +` ) /></td>
                                      <td style="vertical-align: middle;"><i class="fa fa-trash fa-2x stock_search_delete_trash" onclick="deleteLoans(`+ loans_num +` )"></i></td>
                                  </tr>
                                  <tr id="`+ loans_num +`_charge" style="height:39px">
                                      <td>
                                          <span class="small">Charges:</span>
                                          <br>
                                          <span class="stock_quote_transac_price_div">
                                             <input id="loans_transaction_charge" type="number" min="0" value="0.00" step="any" class="stock_quote_transac_price" name="transaction_charge" style="height:39px;" onkeyup=changeLoansValues(`+ loans_num +` ) onchange=changeLoansValues(`+ loans_num +` ) />
                                          </span>
                                      </td>
                                      <td>
                                          <span class="small">Net Amount:</span>
                                          <br>
                                          <span class="stock_quote_transac_price_div">
                                             <input id="loans_transaction_net_amount" type="number" min="0" value="0.00" step="any" class="stock_quote_transac_price" name="transaction_net_amount" style="height:39px;" onkeyup=changeLoansValues(`+ loans_num +` ) onchange=changeLoansValues(`+ loans_num +` ) />
                                          </span>
                                      </td>
                                      <td>
                                          <span class="small">Purchased From:</span>
                                          <br>
                                          <span>
                                             <input id="loans_transaction_purc_fr" type="text" class="stock_quote_transac_price" name="transaction_purc_fr" style="height:39px;"/>
                                          </span>
                                      </td>
                                      <td colspan="2">
                                          <span class="small">Notes:</span>
                                          <br>
                                          <span>
                                              <textarea name="notes" id="notes" rows="1"></textarea>
                                          </span>
                                      </td>
                                  </tr>`


        loans_num += 1;

        $('#table_loans_quote_search_body').append(table_body_data_to_add);
    }

    function changeLoansValues(id){
        conversion_metric = ($("#"+id + " #loans_type").val() == "Gold") ? 10 : 1000;
        amount = parseFloat($("#"+id + " #loans_transaction_price").val()) * parseFloat($("#"+id + " #loans_qty").val()) / conversion_metric;
        charge = parseFloat($("#"+id + "_charge #loans_transaction_charge").val());
        net_amount = amount + charge;
        $("#"+id + "_charge #loans_transaction_net_amount").val(net_amount);
    }

    function deleteLoans(id){

        loans_to_not_add.push(id);

        console.log(loans_to_not_add);
        console.log(loans_to_not_add.length);
        console.log(loans_num);

        if (loans_to_not_add.length == loans_num){

            window.location.replace("<?php echo $wo['portfolio_data']['url'];?>");

        }else{

            $("#"+id).remove();
            $("#"+id+"_charge").remove();

        }
    }

    function pushLoansDataToBackend(){
        loans_array_to_send = new Array();

        /* console.log($("#"+loans_to_add[id]+id+"charge_").text()) */

        for (id = 0; id < loans_num; id++){
            if (!loans_to_not_add.includes(id)){

                if ($("#"+id+" #loans_transaction_date").val() === ""){
                    $("#"+id+" #loans_transaction_date").val("NaN");
                }
                console.log(parseFloat($("#"+id+"_charge #loans_transaction_net_amount").val()));

                loansInfo = {

                        loans_type: $('#'+id+'#loans_type').val(),
                        loans_transaction_date: parseInt(new Date($("#"+id+" #loans_transaction_date").val()).getTime()/1000),
                        loans_transaction_price: parseFloat($("#"+id+" #loans_transaction_price").val()),
                        loans_transaction_qty: parseFloat($("#"+id+" #loans_qty").val()),
                        loans_charge: parseFloat($("#"+id+"_charge #loans_transaction_charge").val()),
                        loans_net_amount: parseFloat($("#"+id+"_charge #loans_transaction_net_amount").val()),
                        loans_purchased_from: $("#"+id+"_charge #loans_transaction_purc_fr").val(),
                        note: $("#"+id+"_charge #notes").val(),

                            };

                loans_array_to_send.push(loansInfo);
            }
        }

        $.ajax({
            url: Wo_Ajax_Requests_File(),
            type: 'GET',
            dataType: 'json',
            data: {
                f:'add_loans',
                loans_array: loans_array_to_send,
                portfolio_id: <?php echo $wo['portfolio_data']['portfolio_id'] ?>,
            },
                success: function(data) {
                    if (data['status'] == 200){
                        console.log(data);
                        console.log("done");
                        location.href = '<?php echo $wo['portfolio_data']['portfolio_url']; ?>';
                    }
                    else if (data['status'] == 401){
                        console.log(data['error']);
                        $('#loans_add_errors').text(data['error']);
                    }
                    else{
                        console.log(data);
                        $('#loans_add_errors').text(data['error']);
                    }
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    alert("AJAX call failed: " + textStatus + ", " + errorThrown);
                }
        });
    }

</script>
